{
  "manifest_version": 2,
  "version": "0.1.4",
  "name": "Auto Tab Discard",
  "description": "Use native tab discard method to automatically reduce memory usage of inactive tabs",

  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png"
  },
  "permissions": [
    "idle",
    "storage",
    "tabs",
    "*://*/*",
    "contextMenus",
    "notifications"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Left-click to open options. Right-click to discard",
    "browser_style": true,
    "theme_icons": [{
      "light": "data/icons/light/16.png",
      "dark": "data/icons/dark/16.png",
      "size": 16
    }, {
      "light": "data/icons/light/32.png",
      "dark": "data/icons/dark/32.png",
      "size": 32
    }, {
      "light": "data/icons/light/48.png",
      "dark": "data/icons/dark/48.png",
      "size": 48
    }, {
      "light": "data/icons/light/64.png",
      "dark": "data/icons/dark/64.png",
      "size": 64
    }]
  },
  "content_scripts":[
    {
      "matches": ["*://*/*"],
      "js": ["data/inject/top.js"]
    },
    {
      "matches": ["*://*/*"],
      "all_frames": true,
      "js": ["data/inject/all.js"]
    }
  ],
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },
  "homepage_url": "http://add0n.com/tab-discard.html",
  "applications": {
    "gecko": {
      "id": "{c2c003ee-bd69-42a2-b0e9-6f34222cb046}",
      "strict_min_version": "58.0"
    }
  }
}
